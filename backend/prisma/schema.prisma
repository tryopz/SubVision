// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model OriginalText {
  id           Int           @id @default(autoincrement())
  text         String
  sourceLang   String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  translations Translation[]
}

model Translation {
  id             Int          @id @default(autoincrement())
  text           String
  targetLang     String
  confidence     Float?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  originalText   OriginalText @relation(fields: [originalTextId], references: [id])
  originalTextId Int
}
